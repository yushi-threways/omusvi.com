{% extends "base.html.twig" %}

{% block head %}
	<title>口座情報</title>
{% endblock %}

{% block og %}
	<meta property="og:site_name" content="OMUSVi">
	<meta property="og:title" content="マイページ詳細|OMUSVi">
	<meta property="og:type" content="website">
	<meta property="og:url" content="{{ app.request.uri }}">
	<meta property="og:image" content="">
{% endblock %}

{% block twitter %}
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:site" content="{{ app.request.uri }}">
	<meta name="twitter:image" content="ogpのURL貼る">
{% endblock %}

{% block main %}
	<div class="myde-Content">
		<h1 class="myde-Content_Title">登録情報</h1>

		{% if account %}
			<table class="table">
				<tbody>
					<tr>
						<th>金融機関名</th>
						<td>{{ account.bankName }}</td>
					</tr>
					<tr>
						<th>金融機関コード</th>
						<td>{{ account.bankCode }}</td>
					</tr>
					<tr>
						<th>支店名</th>
						<td>{{ account.storeName }}</td>
					</tr>
					<tr>
						<th>支店コード</th>
						<td>{{ account.storeCode }}</td>
					</tr>
					<tr>
						<th>種別</th>
						<td>{{ account.bankType }}</td>
					</tr>
					<tr>
						<th>口座番号</th>
						<td>{{ account.accountNumber }}</td>
					</tr>
					<tr>
						<th>講座名義（カタカナ）</th>
						<td>{{ account.accountName }}</td>
					</tr>
				</tbody>
			</table>

			<div class="mypage-Section_Buttons">
				<p class="text-center">
					<a href="{{ path('mypage_bank_account_edit') }}" class="btn btn-lg btn-primary">
						編集
					</a>
				</p>
			</div>
			{% else %}
            <div class="mypage-Section_Buttons">
				<p class="text-center">
					<a href="{{ path('mypage_bank_account_edit') }}" class="">
						口座情報を登録する
					</a>
				</p>
			</div>
		{% endif %}


	</section>

{% endblock %}
