                </tr>
                <tr>
                    <th>氏名カナ</th>
                    <td>{{ detail.firstKana }}　{{ detail.lastKana }}</td>
                </tr>
                <tr>
                    <th>アドレス</th>
                    <td>{{ user.email }}</td>
