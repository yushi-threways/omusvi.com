{% extends "base.html.twig" %}

{% block head %}
    <title>マイページ情報編集確認|OMUSVi</title>
{% endblock %}

{% block og %}
    <meta property="og:site_name" content="OMUSVi">
    <meta property="og:title" content="マイページ情報編集確認|OMUSVi">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:image" content="">
{% endblock %}
    
{% block twitter %}
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="{{ app.request.uri }}">
    <meta name="twitter:image" content="ogpのURL貼る">
{% endblock %}

{% block main %}
    <div class="myde-Content">
    <h1 class="myde-Content_Title">ユーザー情報登録確認画面</h1>
    {{ form_start(form, {'method': 'post', 'action': path('mypage_detail_confirm'), 'attr': {'class': 'mypage_detail_confirm'}}) }}
        <table class="table">
            <tbody>
                <tr>
                    <th>氏名</th>
                    <td>{{ detail.firstName }}　{{ detail.lastName }}</td>
                </tr>
                <tr>
                    <th>氏名カナ</th>
                    <td>{{ detail.firstKana }}　{{ detail.lastKana }}</td>
                </tr>
                <tr>
                    <th>性別</th>
                    <td>{{ gender }}</td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td>{{ detail.telNumber }}</td>
                </tr>
            </tbody>
        </table>
       {{ form_rest(form) }}
       <p class="text-center">
            <a class="btn-lg contact-Form_ButtonBack" href="{{ path('mypage_detail_edit') }}">戻って修正</a>
            <button class="btn-primary btn contact-Form_ButtonCkeck" type="submit">送信する</button>
        </p>
       {{ form_end(form) }}

    </div>
{% endblock %}
