{% extends "base.html.twig" %}

{% set title = 'オミパリトップページ' %}
{% set description = 'オミパリとは街コンイベント運営会社です。愛知県名古屋を' %}
{% set canonical = 'canonical' %}


{% block main %}
    <section class="sw-Section">
        <div class="myapp-Content">
            <div class="myapp-Confirm">
                <h1 class="myapp-Confirm_Title">申し込み確認画面</h1>
                {{ form_start(form, {'method': 'post', 'action': path('my_event_application_confirm', { 'id': my_event.schedule.id }), 'attr': {'class': 'my_event_application_confirm'}}) }}
               
            {{ form_rest(form) }}
            <p class="text-center">
                    <a class="btn contact-Form_ButtonBack" href="{{ path('my_event_show', { 'id': my_event.id }) }}">戻って修正</a>
                    <button class="btn-primary btn contact-Form_ButtonCkeck" type="submit">送信する</button>
                </p>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
