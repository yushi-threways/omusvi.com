{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Men_price</th>
                <td>{{ ticket.menPrice }}</td>
            </tr>
            <tr>
                <th>Woman_price</th>
                <td>{{ ticket.womanPrice }}</td>
            </tr>
            <tr>
                <th>Men_count</th>
                <td>{{ ticket.menCount }}</td>
            </tr>
            <tr>
                <th>Woman_count</th>
                <td>{{ ticket.womanCount }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ ticket.modifiedAt ? ticket.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ticket_index') }}">back to list</a>

    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
