{% extends "base.html.twig" %}

{% set title = "{{ my_event.name }}" %}
{% set description = "{{ my_event.description }}" %}
{% set canonical = 'canonical' %}

{% block head %}
    <title>OMUSViについて|OMUSVi</title>
    <meta name="description" content="オムスビとは、愛知県,名古屋・栄を中心に出会える合コン街コンを開催しています！出会えるイベントを掲載しています。">
{% endblock %}

{% block og %}
    <meta property="og:site_name" content="OMUSVi">
    <meta property="og:title" content="OMUSViトップ">
    <meta property="og:description" content="オムスビとは、愛知県,名古屋・栄を中心に出会える合コン街コンを開催しています！出会えるイベントを掲載しています。">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:image" content="">
{% endblock %}
    
{% block twitter %}
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="{{ app.request.uri }}">
    <meta name="twitter:description" content="オムスビとは、愛知県,名古屋・栄を中心に出会える合コン街コンを開催しています！出会えるイベントを掲載しています。" />
    <meta name="twitter:image" content="ogpのURL貼る">
{% endblock %}

{% block main %}
{{ app.request.uri }}
<section class="sw-Section">
    <div class="static-Content">
        <div class="static-Content_Inner">
            <h1 class="static-Content_Title">{{ static_title }}</h1>
            <p class="static-Content_Desc">
                {{ static_description }}}
            </p>
           
        </div>
    </div>  
</section>
{% endblock %}
