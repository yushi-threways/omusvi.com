{% extends 'base.html.twig' %}

{% block title %}MyEventFlow index{% endblock %}

{% block body %}
    <h1>MyEventFlow index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>Title</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for my_event_flow in my_event_flows %}
            <tr>
                <td>{{ my_event_flow.id }}</td>
                <td>{{ my_event_flow.startTime ? my_event_flow.startTime|date('H:i:s') : '' }}</td>
                <td>{{ my_event_flow.endTime ? my_event_flow.endTime|date('H:i:s') : '' }}</td>
                <td>{{ my_event_flow.title }}</td>
                <td>{{ my_event_flow.content }}</td>
                <td>{{ my_event_flow.createdAt ? my_event_flow.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ my_event_flow.updatedAt ? my_event_flow.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('my_event_flow_show', {'id': my_event_flow.id}) }}">show</a>
                    <a href="{{ path('my_event_flow_edit', {'id': my_event_flow.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('my_event_flow_new') }}">Create new</a>
{% endblock %}
